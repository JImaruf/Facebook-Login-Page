<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Account">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_marginEnd="30dp"

              android:text="Please fillup this form"
              android:textSize="20sp"
              android:background="@color/facebook"
              android:textColor="@color/white"
              android:layout_margin="20dp"

              android:gravity="center_horizontal"
              >


          </TextView>

          <EditText
              android:layout_width="match_parent"
              android:layout_marginTop="30dp"
              android:layout_marginStart="30dp"
              android:adjustViewBounds="true"
              android:layout_marginEnd="30dp"
              android:layout_height="wrap_content"
              android:hint="Email Address"
              android:inputType="textEmailAddress"

              >


          </EditText>


          <EditText
              android:layout_width="match_parent"
              android:layout_marginTop="30dp"
              android:layout_marginStart="30dp"
              android:layout_marginEnd="30dp"
              android:layout_height="wrap_content"
              android:hint="Enter Your Full Name"
              android:inputType="textPersonName"

              >


          </EditText>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_margin="32dp"

              android:text="Sex"
              android:textSize="20sp"
              android:textStyle="bold"

             >


          </TextView>


<RadioGroup
    android:id="@+id/radidoGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Male"
        android:textStyle="bold"
        android:textSize="18sp">

    </RadioButton>
    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Female"
        android:textStyle="bold"
        android:textSize="18sp">

    </RadioButton>

    <RadioButton
        android:id="@+id/transgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Transgender"
        android:textStyle="bold"
        android:textSize="18sp">

    </RadioButton>

</RadioGroup>



          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:textStyle="normal"
              android:textSize="20sp"
              android:layout_marginStart="30dp"
              android:text="Favourite Topics:"
>


          </TextView>

          <CheckBox

              android:layout_width="wrap_content"
              android:id="@+id/movie"
              android:layout_height="wrap_content"
              android:text="Movies"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:onClick="checkBox"
              android:textSize="18sp"
              >


          </CheckBox>
          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sports"
              android:onClick="checkBox"
              android:id="@+id/sports"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:textSize="18sp"
              >


          </CheckBox>
          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Songs"
              android:onClick="checkBox"
              android:id="@+id/songs"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:textSize="18sp"
              >


          </CheckBox>
          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="News"
              android:onClick="checkBox"
              android:id="@+id/news"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:textSize="18sp"
              >


          </CheckBox>

          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Entertainments"
              android:onClick="checkBox"
              android:id="@+id/entertainment"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:textSize="18sp"
              >


          </CheckBox>

          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Video Games"
              android:onClick="checkBox"
              android:id="@+id/video_games"
              android:layout_marginStart="30dp"
              android:textStyle="bold"
              android:textSize="18sp"
              >


          </CheckBox>


          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
             android:inputType="date"

              android:layout_marginEnd="30dp"
              android:hint="Enter Your Birthdate"
              android:layout_marginStart="30dp"



              >


          </EditText>


          <EditText
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_marginEnd="30dp"
              android:inputType="textPassword"
              android:hint="Enter Password"
              android:layout_marginStart="30dp"


              >


          </EditText>
          <EditText
              android:layout_width="match_parent"

              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:inputType="textPassword"
              android:hint="Confirm Password"
              android:layout_marginStart="30dp"

              android:layout_marginEnd="30dp"


              >


          </EditText>

    <Button
    android:layout_width="350dp"
    android:layout_height="wrap_content"

        android:text="Submit"
        android:id="@+id/submit"
        android:textStyle="bold"
        android:textSize="18sp"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/facebook"

        />

      </LinearLayout>>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>